{#
/**
 * 5 point smileys: answer items
 *
 * @var $name
 * @var $value
 * @var $id
 * @var $labelText
 * @var $itemExtraClass
 * @var $checkedState
 * @var $checkconditionFunction
 */
#}

{% if value == '1' %}
        {% set ariaLabel = 'Very sad' %}
{% elseif value == '2' %}
        {% set ariaLabel = 'Sad' %}
{% elseif value == '3' %}
        {% set ariaLabel = 'Neutral' %}
{% elseif value == '4' %}
        {% set ariaLabel = 'Happy' %}
{% elseif value == '5' %}
        {% set ariaLabel = 'Very happy' %}
{% else %}
    {% set ariaLabel = '' %}
{% endif %}

<!-- Item row -->
<div id="javatbd{{name}}{{value}}" class="answer-item radio-item {{itemExtraClass}} emoji-item emoji-item-{{value}}">
    <input
        type="radio"
        name="{{name}}"
        id="answer{{id}}"
        value="{{value}}"
        {{checkedState}}
    />
    <label for="answer{{id}}" class="control-label radio-label" role="img" aria-label="{{ariaLabel}}">{{labelText}}</label>
</div>
<!-- end of Item row -->
